<h1>Sign in</h1>

<div class="row">
  <div class="signin span6">
    
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :name, "Username" %>
    	<%= f.text_field :name %>

    	<%= f.label :password, "Password" %>
    	<%= f.password_field :password %>

    	<%= f.submit "Sign in", :disable_with => 'Signing in...', class: "btn btn-large btn-primary"%>

    	<div id="push">
    		
    	</div>
    	<p class="center">Don't have an account? <%= link_to "Click here to create one.", signup_path %></p>

    <% end %>
  </div>
</div>